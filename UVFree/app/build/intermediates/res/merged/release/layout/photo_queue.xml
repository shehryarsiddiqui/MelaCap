<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="diagnose.uvfree.uvfree.PhotoQueue">

    <TextView
        android:id="@+id/aboutupload"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="15"
        android:text="@string/photo_queue_about"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/queued_photos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:background="#E1E1E1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <Button
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:onClick="uploadAll"
        android:text="@string/upload_all"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">
        <Button
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="50"
            android:onClick="uploadPhotos"
            android:text="@string/upload_photo_queue"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="50"
            android:onClick="deletePhotos"
            android:text="@string/delete_photo_queue"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>


</LinearLayout>
