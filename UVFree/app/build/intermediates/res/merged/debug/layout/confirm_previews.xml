<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="0dp">

    <ImageButton
        android:id="@+id/confirm_prev_first"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:contentDescription="@string/first_image_prev"
        android:padding="5dp"
        android:onClick="retakeFirst" />

    <ImageButton
        android:id="@+id/confirm_prev_second"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:contentDescription="@string/second_image_prev"
        android:padding="5dp"
        android:onClick="retakeSecond" />

</LinearLayout>
